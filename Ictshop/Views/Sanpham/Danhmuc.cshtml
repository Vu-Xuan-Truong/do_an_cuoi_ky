@using webHD.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Sanpham>
@{
    ViewBag.Title = "Nhacungcap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="etext-center">Danh Mục Sản Phẩm </h2>
<br>
<div class="row text-center ">
    @foreach (var sanpham in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class=" thumbnail">
                <img src="~/Pictrure/HD/@sanpham.Anhbia" alt="@sanpham.Tensp"
                     class="img-responsive img-rounded imgbook" />
                <div class=" caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("xemchitiet", "Sanpham", new {id = sanpham.Masp})">
                            @sanpham.Tensp
                        </a>
                    </h4>
                    <p>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new {iMasp = sanpham.Masp, url = Request.Url.ToString()})" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
                            </span>Mua Hàng
                        </a>
                    </p>
                </div>

            </div>
        </div>
    }
</div>
@*Tạo liên kết các trang*@
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Danhmuc", new
    {
        id = ViewBag.MaDM,
        page = page
    }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>

