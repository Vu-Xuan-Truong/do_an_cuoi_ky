@model PagedList.IPagedList<webHD.Models.Sanpham>

@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Sản Phẩm </h2>

<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Giá Tiền
        </th>
        <th>
            SốLượng
        </th>
        <th>
            Mô Tả
        </th>

        <th>
            Ảnh Bìa
        </th>
        <th>
            Tên Nhà Cung Cấp
        </th>
        <th>
            Danh Mục Sản Phẩm
        </th>
        <th> Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tensp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giatien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>

            <td>
                <img src="~/Pictrure/HD/@item.Anhbia" width="50" height="50" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nhacungcap.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Danhmucsanpham.TenDM)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Masp })|
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Masp }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.Masp })
            </td>
        </tr>
    }

</table>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))

